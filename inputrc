#.inputrc
#-- This makes auto-completion ignore case
set completion-ignore-case on
#-- This makes the editing mode vi instead of emacs
#set editing-mode vi
#-- History, start tying, hit up, and it will find commands starting with that letter.
"\C-p":history-search-backward
"\C-n":history-search-forward
"\e[A":history-search-backward
"\e[B":history-search-forward

#-- this maps the up and down arrow to searching
$if mode=vi
    "\C-b":backward-char
    "\C-f":forward-char
    "\C-a":vi-insert-beg
    "\C-e":vi-append-eol
    "\C-d":vi-delete
    "\C-k":kill-line
    "\C-l":clear-screen
    "\C-j":'\033'
$endif

