# vi: set syntax=sh :
# This file is shared between zshrc and bashrc. Only put
# options that both languages can use in this file.

echo '
     ___                         ___           ___
    /  /\          ___          /  /\         /  /\
   /  /::\        /  /\        /  /::\       /  /::|
  /  /:/\:\      /  /:/       /  /:/\:\     /  /:|:|
