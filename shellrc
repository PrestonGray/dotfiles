  \  \:\_\/    |__|:|__/:/       /  /:/       |__|::/
   \  \:\       \__\::::/       /__/:/        /__/:/
    \__\/           ~~~~        \__\/         \__\/
'

# Custom environmental variables
export USER_DOTFILE_DIR="$HOME/workflow/dotfiles"
export USER_VIM_DIR="$HOME/.vim"

# Source configuration files
MY_CONFIG_FILES=(
$USER_DOTFILE_DIR/aliases.sh
$USER_DOTFILE_DIR/colors.sh
$HOME/.rvm/scripts/rvm
$HOME/.slack_config
)

for file in ${MY_CONFIG_FILES[@]}; do
    if [[ -f "$file" ]]; then
        source "$file"
    else
        echo "[$file] does not exist! (Error from shellrc file)"
    fi
done
unset file

# Environmental variables
export CLICOLOR=1
export LSCOLORS="ExGxcxcxcxexexcxcxexex"
export EDITOR="/bin/vi -x"
export VISUAL="/usr/local/bin/vim"
export FCEDIT=$VISUAL
export MANPATH=$HOME/scripts/man:$MANPATH
export GREP_OPTIONS="-i --color=tty"
export GREP_COLOR='07;38;5;74'
export LANG=en_US.UTF-8
export LESS="-JmNirU"
export LESSOPEN="| /usr/local/bin/src-hilite-lesspipe.sh %s"
export GIT_EDITOR=$VISUAL
export SIMPLE_BACKUP_SUFFIX=".sav"
export TERM=xterm-256color-italic
export IRC_CLIENT='irssi'
export TODO="t"
export SCM_CHECK=true
export PATH=$PATH:\
